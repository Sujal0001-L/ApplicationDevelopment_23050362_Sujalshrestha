@page "/login"
@using YourJournal.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-logo">
            <div class="auth-logo-icon">üìñ</div>
            <h2 style="font-size: 22px; font-weight: 700; color: var(--text-dark); margin: 0;">Your Journal</h2>
        </div>
        
        <h1 class="auth-title">Welcome back</h1>
        <p class="auth-subtitle">Sign in to access your journal.</p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">@errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">@successMessage</div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label class="form-label">Email or Username</label>
                <div style="position: relative;">
                    <span style="position: absolute; left: 14px; top: 50%; transform: translateY(-50%); color: var(--text-muted); font-size: 16px;">‚úâÔ∏è</span>
                    <InputText @bind-Value="loginModel.Email" class="form-control" placeholder="" style="padding-left: 42px;" />
                </div>
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <div style="position: relative;">
                    <span style="position: absolute; left: 14px; top: 50%; transform: translateY(-50%); color: var(--text-muted); font-size: 16px;">üîí</span>
                    <InputText type="password" @bind-Value="loginModel.Password" class="form-control" placeholder="" style="padding-left: 42px;" />
                </div>
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <div class="form-group" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
                <label style="display: flex; align-items: center; gap: 8px; font-size: 14px; color: var(--text-dark); cursor: pointer;">
                    <input type="checkbox" @bind="rememberMe" style="cursor: pointer;" />
                    Remember me
                </label>
                <a href="#" style="color: var(--text-dark); text-decoration: none; font-size: 14px; font-weight: 500;">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 20px;">
                Log In
            </button>
        </EditForm>

        <div class="auth-divider">or</div>

        <button @onclick="ShowPinLogin" class="btn btn-secondary" style="width: 100%; display: flex; align-items: center; justify-content: center; gap: 8px;">
            <span>üîí</span> Sign in with PIN
        </button>

        @if (showPinLogin)
        {
            <div style="margin-top: 20px;">
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <InputText @bind-Value="pinEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label">PIN (6 digits)</label>
                    <InputText type="password" @bind-Value="pin" class="form-control" maxlength="6" />
                </div>
                <button @onclick="HandlePinLogin" class="btn btn-primary" style="width: 100%;">
                    Sign In
                </button>
            </div>
        }

        <div class="auth-link">
            Don't have an account? <a href="/signup">Create an account</a>
        </div>

        <div class="auth-footer">
            Your journal entries are encrypted and stored locally on your device for maximum privacy.
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool rememberMe = false;
    private bool showPinLogin = false;
    private string pinEmail = string.Empty;
    private string pin = string.Empty;

    protected override void OnInitialized()
    {
        if (AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var result = await AuthService.LoginAsync(loginModel.Email, loginModel.Password);
        
        if (result.Success)
        {
            successMessage = result.Message;
            await Task.Delay(500);
            NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private void ShowPinLogin()
    {
        showPinLogin = !showPinLogin;
    }

    private async Task HandlePinLogin()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (string.IsNullOrEmpty(pinEmail) || string.IsNullOrEmpty(pin))
        {
            errorMessage = "Please enter both email and PIN";
            return;
        }

        var result = await AuthService.LoginWithPINAsync(pinEmail, pin);
        
        if (result.Success)
        {
            successMessage = result.Message;
            await Task.Delay(500);
            NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }
}
