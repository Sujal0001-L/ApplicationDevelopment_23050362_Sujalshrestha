@page "/settings"
@using YourJournal.Services
@using YourJournal.Models
@inject AuthService AuthService
@inject DatabaseService DatabaseService
@inject PdfExportService PdfExportService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

@if (!AuthService.IsAuthenticated)
{
    NavigationManager.NavigateTo("/login", true);
    return;
}

<div class="app-container">
    <div class="sidebar">
        <div class="sidebar-logo">
            <span class="sidebar-logo-icon">üìñ</span>
            <span class="sidebar-logo-text">Your Journal</span>
        </div>
        
        <ul class="sidebar-menu">
            <li class="sidebar-menu-item" @onclick='() => NavigateTo("/")'>
                <span>üìä</span> Dashboard
            </li>
            <li class="sidebar-menu-item" @onclick='() => NavigateTo("/journal")'>
                <span>üìù</span> Journal
            </li>
            <li class="sidebar-menu-item" @onclick='() => NavigateTo("/calendar")'>
                <span>üìÖ</span> Calendar
            </li>
            <li class="sidebar-menu-item" @onclick='() => NavigateTo("/analytics")'>
                <span>üìà</span> Analytics
            </li>
            <li class="sidebar-menu-item" @onclick='() => NavigateTo("/tags")'>
                <span>üè∑Ô∏è</span> Tags
            </li>
            <li class="sidebar-menu-item active" @onclick='() => NavigateTo("/settings")'>
                <span>‚öôÔ∏è</span> Settings
            </li>
        </ul>

        <div class="sidebar-footer">
            <div class="sidebar-menu-item" @onclick="HandleLogout">
                <span>üö™</span> Log Out
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="page-header">
            <div>
                <h1 class="page-title">Settings</h1>
                <p class="page-subtitle">Customize your journal experience</p>
            </div>
        </div>

        <!-- Theme Settings -->
        <div class="card">
            <h2 class="card-header">üé® Appearance</h2>
            
            <div class="form-group">
                <label class="form-label">Theme</label>
                <p style="font-size: 13px; color: var(--text-muted); margin-bottom: 12px;">
                    Choose your preferred color theme
                </p>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                    <div class="@(currentTheme == "light" ? "theme-option-active" : "theme-option")"
                         @onclick='() => ChangeTheme("light")'>
                        <div style="width: 100%; height: 80px; background: linear-gradient(135deg, #ffffff, #f5f8fa); 
                                    border-radius: 8px; margin-bottom: 12px; border: 2px solid var(--border-color);"></div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <strong>Light Theme</strong>
                            @if (currentTheme == "light")
                            {
                                <span style="color: var(--primary-color);">‚úì</span>
                            }
                        </div>
                        <p style="font-size: 12px; color: var(--text-muted); margin-top: 4px;">
                            Clean and bright interface
                        </p>
                    </div>

                    <div class="@(currentTheme == "dark" ? "theme-option-active" : "theme-option")"
                         @onclick='() => ChangeTheme("dark")'>
                        <div style="width: 100%; height: 80px; background: linear-gradient(135deg, #1a1a1a, #2d2d2d); 
                                    border-radius: 8px; margin-bottom: 12px; border: 2px solid var(--border-color);"></div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <strong>Dark Theme</strong>
                            @if (currentTheme == "dark")
                            {
                                <span style="color: var(--primary-color);">‚úì</span>
                            }
                        </div>
                        <p style="font-size: 12px; color: var(--text-muted); margin-top: 4px;">
                            Easy on the eyes
                        </p>
                    </div>

                    <div class="@(currentTheme == "auto" ? "theme-option-active" : "theme-option")"
                         @onclick='() => ChangeTheme("auto")'>
                        <div style="width: 100%; height: 80px; background: linear-gradient(135deg, #ffffff, #1a1a1a); 
                                    border-radius: 8px; margin-bottom: 12px; border: 2px solid var(--border-color);"></div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <strong>Auto</strong>
                            @if (currentTheme == "auto")
                            {
                                <span style="color: var(--primary-color);">‚úì</span>
                            }
                        </div>
                        <p style="font-size: 12px; color: var(--text-muted); margin-top: 4px;">
                            Follows system preference
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Settings -->
        <div class="card" style="margin-top: 24px;">
            <h2 class="card-header">üë§ Account</h2>
            
            <div class="form-group">
                <label class="form-label">Full Name</label>
                <input type="text" @bind="fullName" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" @bind="email" class="form-control" disabled />
                <p style="font-size: 12px; color: var(--text-muted); margin-top: 4px;">
                    Email cannot be changed
                </p>
            </div>

            <button class="btn btn-primary" @onclick="SaveAccountSettings">
                üíæ Save Changes
            </button>

            @if (accountSaveMessage != null)
            {
                <div style="margin-top: 12px; padding: 12px; border-radius: 8px; 
                            background-color: @(accountSaveSuccess ? "rgba(0, 168, 232, 0.1)" : "rgba(220, 53, 69, 0.1);");
                            color: @(accountSaveSuccess ? "var(--primary-color)" : "#dc3545");">
                    @accountSaveMessage
                </div>
            }
        </div>

        <!-- Security Settings -->
        <div class="card" style="margin-top: 24px;">
            <h2 class="card-header">üîí Security</h2>
            
            <div class="form-group">
                <label class="form-label">Change Password</label>
                <input type="password" @bind="currentPassword" class="form-control" 
                       placeholder="Current password" style="margin-bottom: 8px;" />
                <input type="password" @bind="newPassword" class="form-control" 
                       placeholder="New password" style="margin-bottom: 8px;" />
                <input type="password" @bind="confirmPassword" class="form-control" 
                       placeholder="Confirm new password" />
            </div>

            <button class="btn btn-primary" @onclick="ChangePassword">
                üîë Update Password
            </button>

            @if (passwordChangeMessage != null)
            {
                <div style="margin-top: 12px; padding: 12px; border-radius: 8px; 
                            background-color: @(passwordChangeSuccess ? "rgba(0, 168, 232, 0.1)" : "rgba(220, 53, 69, 0.1);");
                            color: @(passwordChangeSuccess ? "var(--primary-color)" : "#dc3545");">
                    @passwordChangeMessage
                </div>
            }

            <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid var(--border-color);">
                <div class="form-check">
                    <input type="checkbox" @bind="hasPIN" class="form-check-input" id="pinCheck" />
                    <label class="form-check-label" for="pinCheck">
                        Enable PIN for quick login
                    </label>
                </div>
                <p style="font-size: 12px; color: var(--text-muted); margin: 8px 0;">
                    Set a 4-6 digit PIN for faster access
                </p>

                @if (hasPIN)
                {
                    <input type="password" @bind="newPIN" class="form-control" 
                           placeholder="Enter new PIN (4-6 digits)" maxlength="6"
                           style="margin-top: 12px;" />
                    <button class="btn btn-primary" @onclick="UpdatePIN" style="margin-top: 12px;">
                        Update PIN
                    </button>
                }
            </div>
        </div>

        <!-- Data Management -->
        <div class="card" style="margin-top: 24px;">
            <h2 class="card-header">üìä Data & Privacy</h2>
            
            <div style="margin-bottom: 20px;">
                <h4 style="font-size: 15px; font-weight: 600; margin-bottom: 8px;">Export Your Data</h4>
                <p style="font-size: 13px; color: var(--text-muted); margin-bottom: 12px;">
                    Download all your journal entries as a PDF file
                </p>
                <button class="btn btn-secondary" @onclick="ExportAllData" disabled="@isExportingAll">
                    @if (isExportingAll)
                    {
                        <span>‚è≥ Exporting...</span>
                    }
                    else
                    {
                        <span>üì• Export All Entries</span>
                    }
                </button>
                @if (!string.IsNullOrEmpty(exportAllMessage))
                {
                    <div style="margin-top: 12px; padding: 10px; background-color: @(exportAllSuccess ? "#d4edda" : "#f8d7da"); 
                                border: 1px solid @(exportAllSuccess ? "#c3e6cb" : "#f5c6cb"); 
                                border-radius: 8px; font-size: 14px; color: @(exportAllSuccess ? "#155724" : "#721c24");">
                        @exportAllMessage
                    </div>
                }
            </div>

            <div style="padding-top: 20px; border-top: 1px solid var(--border-color);">
                <h4 style="font-size: 15px; font-weight: 600; margin-bottom: 8px; color: #dc3545;">
                    Danger Zone
                </h4>
                <p style="font-size: 13px; color: var(--text-muted); margin-bottom: 12px;">
                    Permanently delete your account and all associated data
                </p>
                <button class="btn btn-danger" @onclick="ShowDeleteConfirmation">
                    üóëÔ∏è Delete Account
                </button>
            </div>
        </div>

        <!-- About -->
        <div class="card" style="margin-top: 24px;">
            <h2 class="card-header">‚ÑπÔ∏è About</h2>
            
            <div style="font-size: 14px; line-height: 1.8;">
                <p><strong>Your Journal</strong></p>
                <p>Version 1.0.0</p>
                <p style="color: var(--text-muted); margin-top: 12px;">
                    A personal journaling application built with .NET MAUI Blazor Hybrid.
                    All your data is stored locally on your device for maximum privacy.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirmation)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; 
                background-color: rgba(0, 0, 0, 0.5); z-index: 1000; 
                display: flex; align-items: center; justify-content: center; padding: 20px;">
        <div class="card" style="max-width: 500px; width: 100%;">
            <h2 style="color: #dc3545; margin-bottom: 16px;">‚ö†Ô∏è Delete Account?</h2>
            <p style="margin-bottom: 20px; line-height: 1.6;">
                This action cannot be undone. All your journal entries, settings, and account data will be permanently deleted.
            </p>
            <p style="margin-bottom: 20px; font-weight: 600;">
                Type <code style="background-color: var(--light-bg); padding: 2px 8px; border-radius: 4px;">DELETE</code> to confirm:
            </p>
            <input type="text" @bind="deleteConfirmation" class="form-control" 
                   placeholder="Type DELETE" style="margin-bottom: 20px;" />
            
            <div style="display: flex; gap: 12px;">
                <button class="btn btn-danger" style="flex: 1;" 
                        disabled="@(deleteConfirmation != "DELETE")"
                        @onclick="DeleteAccount">
                    Delete My Account
                </button>
                <button class="btn btn-secondary" style="flex: 1;" 
                        @onclick="() => showDeleteConfirmation = false">
                    Cancel
                </button>
            </div>
        </div>
    </div>
}

<style>
    .theme-option {
        padding: 16px;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .theme-option:hover {
        border-color: var(--primary-color);
        box-shadow: var(--hover-shadow);
    }

    .theme-option-active {
        padding: 16px;
        border: 2px solid var(--primary-color);
        border-radius: 12px;
        cursor: pointer;
        background-color: rgba(0, 168, 232, 0.05);
    }
</style>

@code {
    private string currentTheme = "light";
    private string fullName = string.Empty;
    private string email = string.Empty;
    private bool hasPIN = false;
    private string newPIN = string.Empty;
    
    private string currentPassword = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    
    private string? accountSaveMessage = null;
    private bool accountSaveSuccess = false;
    private string? passwordChangeMessage = null;
    private bool passwordChangeSuccess = false;
    
    private bool isExportingAll = false;
    private string exportAllMessage = string.Empty;
    private bool exportAllSuccess = false;
    
    private bool showDeleteConfirmation = false;
    private string deleteConfirmation = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.CurrentUser != null)
        {
            fullName = AuthService.CurrentUser.FullName ?? string.Empty;
            email = AuthService.CurrentUser.Email;
            hasPIN = !string.IsNullOrEmpty(AuthService.CurrentUser.PIN);
            
            // Load theme from localStorage
            try
            {
                currentTheme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme") ?? "light";
                await ApplyThemeOnInit();
            }
            catch
            {
                currentTheme = "light";
                await ApplyThemeOnInit();
            }
        }
    }

    private async Task ApplyThemeOnInit()
    {
        try
        {
            var effectiveTheme = currentTheme == "auto" ? "light" : currentTheme;
            await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", effectiveTheme);
        }
        catch { }
    }

    private async Task ChangeTheme(string theme)
    {
        currentTheme = theme;
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "theme", theme);
        await ApplyTheme();
    }

    private async Task ApplyTheme()
    {
        var effectiveTheme = currentTheme;
        
        if (currentTheme == "auto")
        {
            // Check system preference
            var prefersDark = await JSRuntime.InvokeAsync<bool>("window.matchMedia", "(prefers-color-scheme: dark)");
            effectiveTheme = prefersDark ? "dark" : "light";
        }

        await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", effectiveTheme);
    }

    private async Task SaveAccountSettings()
    {
        if (AuthService.CurrentUser != null)
        {
            // Update user name
            // await DatabaseService.UpdateUserAsync(...);
            accountSaveMessage = "Account settings saved successfully!";
            accountSaveSuccess = true;
            StateHasChanged();
            
            await Task.Delay(3000);
            accountSaveMessage = null;
        }
    }

    private async Task ChangePassword()
    {
        if (string.IsNullOrWhiteSpace(currentPassword) || 
            string.IsNullOrWhiteSpace(newPassword) || 
            string.IsNullOrWhiteSpace(confirmPassword))
        {
            passwordChangeMessage = "All password fields are required";
            passwordChangeSuccess = false;
            return;
        }

        if (newPassword != confirmPassword)
        {
            passwordChangeMessage = "New passwords do not match";
            passwordChangeSuccess = false;
            return;
        }

        if (newPassword.Length < 8)
        {
            passwordChangeMessage = "Password must be at least 8 characters long";
            passwordChangeSuccess = false;
            return;
        }

        // Verify current password and update
        if (AuthService.CurrentUser != null)
        {
            // Create a temporary hash to compare
            using var sha256 = System.Security.Cryptography.SHA256.Create();
            var bytes = System.Text.Encoding.UTF8.GetBytes(currentPassword);
            var hash = sha256.ComputeHash(bytes);
            var currentPasswordHash = Convert.ToBase64String(hash);
            
            if (currentPasswordHash == AuthService.CurrentUser.PasswordHash)
            {
                // await AuthService.UpdatePasswordAsync(newPassword);
                passwordChangeMessage = "Password updated successfully!";
                passwordChangeSuccess = true;
                currentPassword = string.Empty;
                newPassword = string.Empty;
                confirmPassword = string.Empty;
            }
            else
            {
                passwordChangeMessage = "Current password is incorrect";
                passwordChangeSuccess = false;
            }
        }

        StateHasChanged();
        await Task.Delay(3000);
        passwordChangeMessage = null;
    }

    private async Task UpdatePIN()
    {
        if (string.IsNullOrWhiteSpace(newPIN) || newPIN.Length < 4 || newPIN.Length > 6)
        {
            // Show error
            return;
        }

        // Update PIN
        // await AuthService.UpdatePINAsync(newPIN);
        newPIN = string.Empty;
    }

    private async Task ExportAllData()
    {
        try
        {
            isExportingAll = true;
            exportAllMessage = string.Empty;
            StateHasChanged();
            
            if (AuthService.CurrentUser == null)
            {
                exportAllSuccess = false;
                exportAllMessage = "‚ùå Export failed: User not authenticated";
                return;
            }
            
            // Get date range for all entries
            var allEntries = await DatabaseService.GetEntriesForUserAsync(AuthService.CurrentUser.Id);
            
            if (!allEntries.Any())
            {
                exportAllSuccess = false;
                exportAllMessage = "‚ùå No entries to export";
                return;
            }
            
            var startDate = allEntries.Min(e => e.Date);
            var endDate = allEntries.Max(e => e.Date);
            
            // Export to PDF
            var (filePath, fileName) = await PdfExportService.ExportToPdfAsync(startDate, endDate);
            
            exportAllSuccess = true;
            exportAllMessage = $"‚úÖ Successfully exported {allEntries.Count} entries to Downloads folder: {fileName}. File has been opened automatically.";
        }
        catch (Exception ex)
        {
            exportAllSuccess = false;
            exportAllMessage = $"‚ùå Export failed: {ex.Message}";
        }
        finally
        {
            isExportingAll = false;
            StateHasChanged();
            
            // Clear message after 8 seconds
            await Task.Delay(8000);
            exportAllMessage = string.Empty;
            StateHasChanged();
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirmation = true;
        deleteConfirmation = string.Empty;
    }

    private async Task DeleteAccount()
    {
        if (deleteConfirmation == "DELETE" && AuthService.CurrentUser != null)
        {
            // Delete all user data
            // await DatabaseService.DeleteUserAndDataAsync(AuthService.CurrentUser.Id);
            AuthService.Logout();
            NavigationManager.NavigateTo("/login", true);
        }
    }

    private void NavigateTo(string path)
    {
        NavigationManager.NavigateTo(path);
    }

    private void HandleLogout()
    {
        AuthService.Logout();
        NavigationManager.NavigateTo("/login", true);
    }
}
